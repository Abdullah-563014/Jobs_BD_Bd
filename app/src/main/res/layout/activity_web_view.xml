<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebViewActivity">

    <ProgressBar
        android:id="@+id/webActivityProgressBarId"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:progressTint="#9C27B0"
        android:scaleY="1.3" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/webViewActivitySwipeRefreshLayoutId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/webActivityProgressBarId"
        app:layout_constraintBottom_toTopOf="@+id/webViewActivityBannerAdsContainerId"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <WebView
            android:id="@+id/myWebViewId"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <RelativeLayout
        android:id="@+id/webViewActivityBannerAdsContainerId"
        app:layout_constraintTop_toBottomOf="@+id/webViewActivitySwipeRefreshLayoutId"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/webViewActivityFacebookBannerAdsContainerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"/>
        <com.mopub.mobileads.MoPubView
            android:id="@+id/webViewActivityMoPubBannerAdsContainerId"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:moPubAdSize="match_view">
        </com.mopub.mobileads.MoPubView>
    </RelativeLayout>


    <TextView
        android:id="@+id/addToFavouriteListTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/webActivityProgressBarId"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/radious_background"
        android:padding="5dp"
        android:text="ফেভারিট করুন"
        android:textColor="#5c0ce7"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorAccent" />
</androidx.constraintlayout.widget.ConstraintLayout>