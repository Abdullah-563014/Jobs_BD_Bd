<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/noInternetActivitySwipeRefreshLayoutId"
    android:layout_height="match_parent"
    tools:context=".NoInternetActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="ওহ!"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#F54108"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="কিছু একটা সমস্যা হয়েছে।"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#F54108"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="সম্ভাব্য সমস্যা হতে পারে –"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#141414"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="১. ইন্টারনেট দূর্বল অথবা, সংযোগ নেই।"
                android:textSize="18sp"
                android:textColor="#141414"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="সমস্যার সমাধান না হলে, অনুগ্রহ করে নিচের ইমেইল ঠিকানায় ইমেইল করে অথবা, নিচের মোবাইল নাম্বারে মেসেজ দিয়ে আমাদের জানান|"
                android:textSize="18sp"
                android:textColor="#3F51B5"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="easysoft247@gmail.com"
                android:textSize="18sp"
                android:textColor="#141414"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="01303628419"
                android:textSize="18sp"
                android:textColor="#141414"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <Button
                    android:id="@+id/noInternetActivityCopyEmailButtonId"
                    android:text="কপি ইমেইল"
                    android:background="@drawable/copy_button_background"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:textSize="20sp"
                    android:paddingRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/noInternetActivityCopyNumberButtonId"
                    android:text="কপি নাম্বার"
                    android:background="@drawable/copy_button_background"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="20dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:paddingRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <Button
                android:id="@+id/noInternetActivityRefreshButtonId"
                android:text="Refresh"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:paddingLeft="20dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/noInternetActivityCloseButtonId"
                android:text="close app"
                android:background="@drawable/close_button_background"
                android:textColor="#FFFFFF"
                android:paddingLeft="20dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/noInternetActivityBackButtonId"
                android:text="back"
                android:background="@drawable/back_button_background"
                android:textColor="#FFFFFF"
                android:paddingLeft="20dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>